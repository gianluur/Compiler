if (true) {
    var int x = 1;
}

# If-else
if (false) {
    var int x = 1;
} else {
    var int x = 2;
}

# Nested if
if (true) {
    if (false) {
        var int x = 1;
    } else {
        var int x = 2;
    }
}

# Complex conditions
if (true and false or true) {
    var int x = 1;
}

if (!(false) and (true and false)) {
    var int x = 2;
}